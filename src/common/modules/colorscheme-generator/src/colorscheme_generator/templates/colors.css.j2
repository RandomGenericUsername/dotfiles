/*
 * Color scheme generated from: {{ source_image }}
 * Backend: {{ backend }}
 * Generated: {{ generated_at }}
 */

:root {
  /* Special colors */
  --background: {{ background.hex }};
  --foreground: {{ foreground.hex }};
  --cursor: {{ cursor.hex }};

  /* Terminal colors (0-15) */
{% for color in colors %}  --color{{ loop.index0 }}: {{ color.hex }};
{% endfor %}

  /* RGB values */
  --background-rgb: {{ background.rgb[0] }}, {{ background.rgb[1] }}, {{ background.rgb[2] }};
  --foreground-rgb: {{ foreground.rgb[0] }}, {{ foreground.rgb[1] }}, {{ foreground.rgb[2] }};
  --cursor-rgb: {{ cursor.rgb[0] }}, {{ cursor.rgb[1] }}, {{ cursor.rgb[2] }};
}

/* ============================================================================
 * Rofi Colorscheme Viewer Configuration
 * Generated by rofi-config-manager - DO NOT EDIT MANUALLY
 * ============================================================================ */

configuration {
    click-to-exit: {{ "true" if CLICK_TO_EXIT else "false" }};
    show-icons: {{ "true" if SHOW_ICONS else "false" }};
    scroll-method: {{ SCROLL_METHOD }};
    font: "{{ FONT_FAMILY }} {{ FONT_SIZE }}";
}

/* ============================================================================
 * Color Scheme (Inline)
 * ============================================================================ */
* {
    /* Special colors */
    background: {{ BACKGROUND }};
    foreground: {{ FOREGROUND }};
    cursor: {{ CURSOR }};

    /* Terminal colors */
    {% for i in range(16) %}
    color{{ i }}: {{ COLORS[i] }};
    {% endfor %}

    {% if BORDER_WIDTH > 0 %}
    /* Border */
    border-width: {{ BORDER_WIDTH }}px;
    {% endif %}

    {% if CURRENT_WALLPAPER %}
    /* Current wallpaper */
    current-image: url("{{ CURRENT_WALLPAPER }}", width);
    {% endif %}
}

/* ============================================================================
 * Window Styling
 * ============================================================================ */
window {
    width:                        25%;
    x-offset:                     0%;
    y-offset:                     10%;
    spacing:                      0%;
    padding:                      0%;
    margin:                       0%;
    color:                        #FFFFFF;
    {% if BORDER_WIDTH > 0 %}
    border:                       @border-width;
    border-color:                 #FFFFFF;
    {% else %}
    border:                       0px;
    {% endif %}
    cursor:                       "default";
    transparency:                 "real";
    location:                     center;
    anchor:                       center;
    fullscreen:                   false;
    enabled:                      true;
    border-radius:                1%;
    background-color:             transparent;
}

/* ---- Mainbox ---- */
mainbox {
    enabled:                      true;
    orientation:                  vertical;
    spacing:                      0px;
    margin:                       0px;
    background-color:             @background;
    background-image:             @current-image;
    children:                     ["listbox"];
}

/* ---- Listbox ---- */
listbox {
    spacing:                     20px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    ["message", "listview"];
}

/* ---- Message ---- */
message {
    background-color:            transparent;
    border:0px;
    margin:20px 0px 0px 0px;
    padding:0px;
    spacing:0px;
    border-radius: 10px;
}

textbox {
    padding:                     15px;
    margin:                      0px;
    border-radius:               0px;
    background-color:            @background;
    text-color:                  @foreground;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

error-message {
    padding:                     15px;
    border-radius:               20px;
    background-color:            @background;
    text-color:                  @foreground;
}

/* ---- Listview ---- */
listview {
    enabled:                      true;
    columns:                      4;
    lines:                        4;
    cycle:                        false;
    dynamic:                      false;
    scrollbar:                    true;
    layout:                       vertical;
    reverse:                      false;
    spacing:                      10px;
    padding:                      10px;
    margin:                       0px;
    fixed-height:                 true;
    fixed-columns:                true;
    background-color:             @background;
    border:                       0px;
    flow:                         horizontal;
    children:                     ["element"];
}

/* ---- Element ---- */
element {
    enabled:                      true;
    padding:                      10px;
    margin:                       5px;
    cursor:                       pointer;
    background-color:             @background;
    border-radius:                10px;
    {% if BORDER_WIDTH > 0 %}
    border:                       @border-width;
    {% else %}
    border:                       0px;
    {% endif %}
    orientation:                  vertical;
}

element normal.normal {
    border-color:                @color11;
    background-color:            inherit;
    text-color:                  @foreground;
}

element selected.normal {
    border-color:                @foreground;
    background-color:            inherit;
    text-color:                  @foreground;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        60px;
    cursor:                      inherit;
    horizontal-align:            0.5;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

/* ---- Scrollbar ---- */
scrollbar {
    border-radius: 5px;
    background-color: @background;
}

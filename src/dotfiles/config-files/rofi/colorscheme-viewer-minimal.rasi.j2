/* ---- Minimal Colorscheme Viewer - 2x8 Grid ---- */

configuration {
    click-to-exit: true;
    show-icons: true;
    display-colors: "";
}

* {
    background-color: transparent;
    text-color: {{ colors.foreground }};
    font: "JetBrainsMono Nerd Font 10";
}

/* ---- Window ---- */
window {
    transparency: "real";
    background-color: #00000030;
    border: 0px;
    border-radius: 0px;
    location: center;
    anchor: center;
    x-offset: 0;
    y-offset: 0;
    width: 340px;
}

/* ---- Mainbox ---- */
mainbox {
    enabled: true;
    spacing: 0px;
    background-color: transparent;
    padding: 10px;
    border-radius: 0px;
    children: ["listview"];
}

/* ---- Listview ---- */
listview {
    enabled: true;
    columns: 8;  /* 8 colors per row */
    lines: 2;    /* 2 rows = 16 colors total */
    cycle: false;
    dynamic: false;
    scrollbar: false;
    layout: horizontal;
    reverse: false;
    fixed-height: true;
    fixed-columns: true;
    spacing: 0px;
    padding: 0px;
    background-color: transparent;
    cursor: "default";
}

/* ---- Elements ---- */
element {
    enabled: true;
    padding: 0px;
    margin: 0px;
    spacing: 0px;
    background-color: transparent;
    border: 0px;
    border-radius: 0px;
    cursor: pointer;
}

element selected {
    background-color: #ffffff20;
}

/* ---- Element Icon ---- */
element-icon {
    background-color: transparent;
    size: 40px;
    cursor: inherit;
    padding: 0px;
    margin: 0px;
    spacing: 0px;
    border: 0px;
}

/* ---- Element Text (hidden) ---- */
element-text {
    background-color: transparent;
    cursor: inherit;
    highlight: none;
    vertical-align: 0.5;
    horizontal-align: 0.5;
    enabled: false;  /* Hide text, show only icons */
}
